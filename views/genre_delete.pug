extends layout

block content

  h1 Delete Genre: #{genre.name}

  if genre_movies.length

    p #[strong Delete the following movies before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Movies

      dl
        each movie in genre_movies
          dt
            a(href=movie.movie_url) #{movie.title}
          dd #{movie.summary}

  else
    p Before deleting provide the password!

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden', name='id', value=genre._id )
      div.form-group
        label(for='password') Password:
        input#password.form-control(type='password', name='password', placeholder='Enter your password' required)

      button.btn.btn-primary(type='submit') Delete